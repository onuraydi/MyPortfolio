# 1. Build aşaması
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Proje dosyanızı kopyalayıp restore edin
COPY Frontend/Portfolio.WebUI/Portfolio.WebUI.csproj ./Portfolio.WebUI/
WORKDIR "/src/Portfolio.WebUI"
RUN dotnet restore

# Kaynak kodu kopyala ve publish et
COPY Frontend/Portfolio.WebUI/. ./

RUN dotnet publish -c Release -o /app/publish

# 2. Runtime aşaması
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .

# Servis portu
EXPOSE 5003

ENTRYPOINT ["dotnet", "Portfolio.WebUI.dll"]
