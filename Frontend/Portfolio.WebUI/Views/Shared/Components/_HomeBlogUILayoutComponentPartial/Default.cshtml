@model GetPortfolioBlogByPortfolioBlogIdDto

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
    @if (Model != null)
    {
        <section class="hero-wrap js-fullheight" style="background-image: url('@Url.Content(Model.CoverImage)');" data-stellar-background-ratio="0.5">
            <div class="overlay"></div>
            <div class="container">
                <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-center">
                    <div class="col-md-12 ftco-animate pb-5 mb-3 text-center">
                        <h1 class="mb-3 bread">@Model.Title</h1>
                    </div>
                </div>
            </div>
        </section>
    }
</body>

