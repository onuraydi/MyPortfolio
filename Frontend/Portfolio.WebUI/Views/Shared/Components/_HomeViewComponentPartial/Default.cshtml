@model List<GetPortfolioMainTitleDto>

<section id="home-section" class="hero">
    <div class="home-slider  owl-carousel">
        @foreach (var item in Model)
        {
            <div class="slider-item ">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row d-md-flex no-gutters slider-text align-items-end justify-content-end" data-scrollax-parent="true">
                        <div class="one-third js-fullheight order-md-last img" style="background-image: url('@Url.Content(item.Image)');">
                            <div class="overlay"></div>
                        </div>
                        <div class="one-forth d-flex  align-items-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                            <div class="text">
                                <span class="subheading">Merhaba!</span>
                                <h1 class="mb-4 mt-3"><span>@item.Title</span></h1>
                                <h2 class="mb-4">@item.Description</h2>
                                <p><a href="@item.Button1Href" class="btn btn-primary py-3 px-4">@item.ButtonName1</a> <a href="@item.Button2Href" class="btn btn-white btn-outline-white py-3 px-4">@item.ButtonName2</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


