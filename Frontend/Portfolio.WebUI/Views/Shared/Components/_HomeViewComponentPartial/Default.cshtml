@model List<GetPortfolioMainTitleDto>

<section id="home-section" class="hero">
    <div class="hero-content">
        @if (Model != null && Model.Any())
        {
            var item = Model.First();
            <div class="hero-item">
                <div class="container">
                    <div class="row align-items-center justify-content-center text-center">
                        <div class="col-lg-8 col-md-12">
                            <div class="hero-text-content">
                                <span class="subheading">MERHABA!</span>
                                <h1 class="main-title">@item.Title</h1>
                                <h2 class="description">@item.Description</h2>
                                <div class="hero-buttons">
                                    <a href="@item.Button1Href" target="_blank" class="custom-btn">@item.ButtonName1</a>
                                    <a href="@item.Button2Href" target="_blank" class="custom-btn btn-dark">@item.ButtonName2</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<style>
    .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #000;
        position: relative;
        padding: 2rem 0;
        overflow: hidden;
    }

    .hero-content {
        width: 100%;
        z-index: 1;
        padding: 0 1rem;
    }

    .hero-text-content {
        color: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        text-align: center;
    }

    .subheading {
        font-size: 1.5rem;
        color: #F4B41A;
        letter-spacing: 2px;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .main-title {
        font-size: 4rem;
        font-weight: 800;
        color: #F4B41A;
        text-transform: lowercase;
        margin: 0;
        line-height: 1.2;
        word-wrap: break-word;
    }

    .description {
        font-size: 2rem;
        color: #fff;
        font-weight: 300;
        margin: 0;
        margin-bottom: 1rem;
        line-height: 1.4;
    }

    .hero-buttons {
        display: flex;
        gap: 1.5rem;
        margin-top: 1rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .custom-btn {
        padding: 0.8rem 2rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 500;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: inline-block;
    }

    .custom-btn {
        background-color: #F4B41A;
        color: #000;
        border: 2px solid #F4B41A;
    }

    .custom-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(244, 180, 26, 0.3);
        color: #000;
        text-decoration: none;
    }

    .btn-dark {
        background-color: transparent;
        border: 2px solid #F4B41A;
        color: #F4B41A;
    }

    .btn-dark:hover {
        background-color: #F4B41A;
        color: #000;
        text-decoration: none;
    }

    @media (max-width: 992px) {
        .main-title {
            font-size: 3.5rem;
        }

        .description {
            font-size: 1.8rem;
        }
    }

    @media (max-width: 768px) {
        .hero {
            padding: 4rem 1rem;
        }

        .main-title {
            font-size: 2.8rem;
        }

        .description {
            font-size: 1.5rem;
        }

        .subheading {
            font-size: 1.2rem;
        }

        .hero-buttons {
            flex-direction: column;
            width: 100%;
            max-width: 300px;
            gap: 1rem;
        }

        .custom-btn {
            width: 100%;
            text-align: center;
        }
    }

    @media (max-width: 480px) {
        .main-title {
            font-size: 2.2rem;
        }

        .description {
            font-size: 1.2rem;
        }

        .subheading {
            font-size: 1rem;
        }
    }
</style>