<!--Teknolojiler ve yetenekler kısmı-->
@model List<GetAllPortfolioTechnologyDto>

<section class="ftco-section" id="services-section">
    <div class="container">
        <div class="row justify-content-center py-5 mt-5">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h1 class="big big-2">Teknolojiler</h1>
                <h2 class="mb-4">Teknolojiler</h2>
                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 text-center d-flex ftco-animate">
                    <a href="#" class="services-1">
                        <span class="icon">
                            <img style="width:75px;height:75px;margin:auto" src="@item.IconUrl" />
                            @*<i class="flaticon-analysis"></i>*@
                        </span>
                        <div class="desc">
                            <h3 class="mb-5">@item.TechnologyName</h3>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>