@model List<GetAllPortfolioCertificateDto> 

<section class="ftco-section ftco-project" id="certificates-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h1 class="big big-2">Sertifikalar</h1>
                <h2 class="mb-4">Sertifikalar</h2>
                <p>Çeşitli platformlardan aldığım eğitimler sonucu elde ettiğim sertifikalar</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <a href="@item.CertificateUrl" target="_blank">
                        <div class="project img ftco-animate d-flex justify-content-center align-items-center" style="background-image: url('@Url.Content(item.Image)'); background-size:contain">
                            <!-- DEğiştirilebilir size özelliği-->
                            <div class="overlay"></div>
                            <div class="text text-center p-4">
                                <h3>@item.CertificateName</h3>
                                <span>@item.CertificateDescription</span>
                                <p>@item.CertificateDoneDate.ToShortDateString()</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>