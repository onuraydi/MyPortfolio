@model CreatePortfolioContactDto

<section class="ftco-section contact-section ftco-no-pb" id="contact-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h1 class="big big-2">İletişim</h1>
                <h2 class="mb-4">Benimle iletişime geçin!</h2>
                <p>Aklınıza takılan herhangi birşeyi bana yazmaktan lütfen çekinmeyin!</p>
            </div>
        </div>

        <div class="row d-flex contact-info mb-5">
            <div class="col-md-6 col-lg-3 d-flex ftco-animate">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-map-signs"></span>
                    </div>
                    <h3 class="mb-4">Adres</h3>
                    <p>İstanbul/Başakşehir</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex ftco-animate">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-paper-plane"></span>
                    </div>
                    <h3 class="mb-4">Email</h3>
                    <p><a href="mailto:info@yoursite.com">onuraydi@outlook.com</a></p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex ftco-animate">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-github"></span>
                    </div>
                    <h3 class="mb-4">Github</h3>
                    <p><a href="tel://1234567920">onuraydi</a></p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex ftco-animate">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-linkedin"></span>
                    </div>
                    <h3 class="mb-4">Linkedin</h3>
                    <p><a href="https://www.linkedin.com/in/onurayd%C4%B1/">Onur Aydı</a></p>
                </div>
            </div>
        </div>


        <div class="row no-gutters block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form method="post" class="bg-light p-4 p-md-5 contact-form">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="SenderNameSurname" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="SenderEmail" placeholder="Your Email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="MessageSubject" placeholder="Subject">
                    </div>
                    <div class="form-group">
                        <textarea cols="30" rows="7" class="form-control" asp-for="MessageDetail" placeholder="Message"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>

            <div class="col-md-6 d-flex">
                <div class="img" style="background-image: url('@Url.Content("~/Uploads/607c2505-f0bd-4d59-a4fc-0252d8c12cc2.JPG")');"></div>
            </div>
        </div>
    </div>
</section>
