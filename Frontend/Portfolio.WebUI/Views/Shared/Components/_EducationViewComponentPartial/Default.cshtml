@model List<GetAllPortfolioEducationDto>


<section class="ftco-section ftco-no-pb" id="education-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-md-10 heading-section text-center ftco-animate">
                <h1 class="big big-2">Eğitimler</h1>
                <h2 class="mb-4">Eğitimler</h2>
                <p>Aldığım Eğitimler</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6">

                    <div class="resume-wrap ftco-animate">
                        <span class="date">@item.SchoolName</span>
                        <h2>@item.EducationDetail</h2>
                        <span class="position">@item.EducationDate</span>
                        <p class="mt-4">@item.Average</p>
                        <p class="mt-4">@item.EducationDescription</p>
                    </div>
                </div>
            }
        </div>
