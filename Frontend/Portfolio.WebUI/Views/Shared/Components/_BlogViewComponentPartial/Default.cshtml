@model List<GetAllPortfolioBlogDto>
<!-- tam dinamikleşitirlmedi eklenmesi gereken prop ve cms'ler var-->

<section class="ftco-section" id="blog-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h1 class="big big-2">Bloglar</h1>
                <h2 class="mb-4">Bloglar</h2>
                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia</p>
            </div>
        </div>
        <div class="row d-flex">
            @foreach (var item in Model)
            {
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry justify-content-end">
                        <a href="/BlogDetail/GetBlogDetail/@item.PortfolioBlogId" class="block-20" style="background-image: url('@Url.Content("~/clark-master/images/image_1.jpg")');">
                        </a>
                        <div class="text mt-3 float-right d-block">
                            <div class="d-flex align-items-center mb-3 meta">
                                <p class="mb-0">
                                    <span class="mr-2">@item.PublishDate</span>
                                    <a href="#" class="mr-2">Admin</a>
                                    <a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a>
                                </p>
                            </div>
                            <h3 class="heading"><a href="~/clark-master/single.html">@item.Title</a></h3>
                            <p>@item.SubContent</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>