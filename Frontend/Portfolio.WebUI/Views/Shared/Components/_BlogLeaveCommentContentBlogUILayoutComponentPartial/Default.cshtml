<!--Yorum yapma kısmı-->
@model BlogsViewModel

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir yorum yapın</h3>
   <form method="post" action="@Url.Action("AddComment", "BlogDetail", new { id = ViewBag.id }) class="p-5 bg-dark">
        <input type="hidden" asp-for="CreateComment.portfolioBlogId" value="@ViewBag.id" />
        <div class="form-group">
            <label for="name">İsim *</label>
            <input type="text" class="form-control" asp-for="CreateComment.Name">
        </div>
        <div class="form-group">
            <label for="name">Soyisim *</label>
            <input type="text" class="form-control" asp-for="CreateComment.Surname">
        </div>
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" class="form-control" asp-for="CreateComment.email">
        </div>
        <div class="form-group">
            <label for="website">Yorum Başlığı *</label>
            <input type="text" class="form-control" asp-for="CreateComment.CommentTitle">
        </div>

        <div class="form-group">
            <label for="message">Yorum *</label>
            <textarea name="CreateComment.CommentDetail" asp-for="CreateComment.CommentDetail" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="hidden" name="CreateComment.PortfolioBlogId" value="@ViewBag.id" />
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>
    </form>
</div>

