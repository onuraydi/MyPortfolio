@model GetPortfolioContactByPortfolioContactIdDto

@{
    ViewData["Title"] = "GetByIdPortfolioContact";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24">
    <div class="card-body">
        <h4 class="card-title">Mesaj Detayı</h4>
        <p class="card-description">Mesajın Detayını görüntüleme Sayfası</p>
        <form class="forms-sample" method="post">
            <input type="hidden" asp-for="PortfolioContactId" />
            <div class="form-group">
                <label for="Title">Gönderen Kişi</label>
                <input type="text" class="form-control" asp-for="SenderNameSurname" placeholder="Gönderen Kişi" disabled style="background-color: #2a3038"/>
            </div>
            <div class="form-group">
                <label for="Title">Mail</label>
                <input type="text" class="form-control" asp-for="SenderEmail" placeholder="Mail" disabled style="background-color: #2a3038"/>
            </div>
            <div class="form-group">
                <label for="Title">Konu</label>
                <input type="text" class="form-control" asp-for="MessageSubject" placeholder="Konu" disabled style="background-color: #2a3038"/>
            </div>
            <div class="form-group">
                <label for="Title">Açıklama</label>
                <textarea class="form-control" asp-for="MessageDetail" rows="5" disabled style="background-color: #2a3038"></textarea>
            </div>
            <button type="submit" onclick="location.href='mailto:@Model.SenderEmail'" class="btn btn-primary mr-2">Dönüş Yap</button>
            <button onclick="history.back()" class="btn btn-info">Geri</button>
        </form>
    </div>
</div>

