@model List<GetAllPortfolioCertificateDto>

@{
    ViewData["Title"] = "GetAllPortfolioCertificate";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}


<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24 ">
    <div class="card-body">
        <h4 class="card-title">Sertifikalar</h4>
        <p class="card-description">Sertifikalar ile ilgili işlemleri içerir</p>
        <div class="table-res">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Sertfika Adı</th>
                        <th>Sertifika URL</th>
                        <th>Açıklama</th>
                        <th>Alınma Tarihi</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.CertificateName</td>
                            <td>@item.CertificateUrl</td>
                            <td>@item.CertificateDescription</td>
                            <td>@item.CertificateDoneDate</td>
                            <td><a href="/Admin/PortfolioCertificate/UpdatePortfolioCertificate/@item.PortfolioCertificateId" class="btn btn-primary">Güncelle</a></td>
                            <td><a href="/Admin/PortfolioCertificate/DeletePortfolioCertificate/@item.PortfolioCertificateId" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/PortfolioCertificate/CreatePortfolioCertificate/" class="btn btn-success">Sertifika Ekle</a>
        </div>
    </div>
</div>