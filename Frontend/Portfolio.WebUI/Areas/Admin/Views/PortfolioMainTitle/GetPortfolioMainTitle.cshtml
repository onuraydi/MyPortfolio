@model List<GetPortfolioMainTitleDto>
@{
    ViewData["Title"] = "GetPortfolioMainTitle";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}


<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24 ">
    <div class="card-body">
        <h4 class="card-title">Ana başlık</h4>
        <p class="card-description">Ana Sayfa kısmındaki verileri düzenlemek ile ilgili işlemleri içerir.</p>
        <div class="table-res">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Resim</th>
                        <th>Güncelle/Detaylar</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td><img src="@item.Image" /></td>
                            <td><a href="/Admin/PortfolioMainTitle/UpdatePortfolioMainTitle/@item.PortfolioMainTitleId" class="btn btn-primary">Güncelle/Detaylar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


