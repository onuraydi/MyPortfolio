@model List<GetAllPortfolioProjectDto>
@{
    ViewData["Title"] = "GetAllPortfolioProject";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}

<style>
    .aciklama {
        max-width: 300px; /* Genişliği sınırla */
        white-space: nowrap; /* Satır taşmasını önle */
        overflow: hidden; /* Taşan kısmı gizle */
        text-overflow: ellipsis; /* Taşan kısmı üç nokta ile göster */
    }
</style>

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24 ">
    <div class="card-body">
        <h4 class="card-title">Projeler</h4>
        <p class="card-description">Projeler ile ilgili işlemleri içerir (projeye tıklayınca detaylara gitsin backend hazır gibi ancak sayfa tasarımı vb yapılamlıo ya da image slider falan ekle)</p>
        <div class="table-res">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Proje Adı</th>
                        <th>Projedeki Rol</th>
                        <th>Kapak Fotoğrafı</th>
                        <th>Proje Açıklaması</th>
                        <th>Tarih Aralığı</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.ProjectName</td>
                            <td>@item.ProjectRole</td>
                            <td><img src="@item.Image" alt="Kapak Resmi"/></td>
                            <td class="aciklama">@item.ProjectDescription</td>
                            <td class="aciklama">@item.ProjectStartDate</td>
                            <td><a href="/Admin/PortfolioProject/UpdatePortfolioProject/@item.PortfolioProjectId" class="btn btn-primary">Güncelle</a></td>
                            <td><a href="/Admin/PortfolioProject/DeletePortfolioProject/@item.PortfolioProjectId" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/PortfolioProject/CreatePortfolioProject/" class="btn btn-success">Proje Ekle</a>
        </div>
    </div>
</div>