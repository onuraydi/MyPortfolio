@model GetPortfollioProjectFooterByPortfolioProjectFooterIdDto

@{
    ViewData["Title"] = "UpdatePortfolioProjectFooter";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24">
    <div class="card-body">
        <h4 class="card-title">Proje Footerları</h4>
        <p class="card-description">Proje Footerları ile ilgili güncelleme işlemlerini bu sayfadan gerçekleştirebilirsiniz</p>
        <form class="forms-sample" method="post">
            <input type="hidden" asp-for="PortfolioProjectFooterId" />
            <div class="form-group">
                <label for="Title">Proje Adı</label>
                <input type="text" class="form-control" asp-for="ProjectName" placeholder="Proje Adı" />
            </div>
            <div class="form-group">
                <label for="Title">Link</label>
                <input type="text" class="form-control" asp-for="ProjectLink" placeholder="Link" />
            </div>
            <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            <button class="btn btn-info">Geri</button>
        </form>
    </div>
</div>

