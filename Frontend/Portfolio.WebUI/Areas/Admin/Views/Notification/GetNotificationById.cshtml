@model GetNotificationDto

@{
    ViewData["Title"] = "GetNotificationById";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24">
    <div class="card-body">
        <h4 class="card-title">Bildirim Detayı</h4>
        <p class="card-description">Bildirim Detayını görüntüleme Sayfası</p>
        <form class="forms-sample" method="post">
            <input type="hidden" asp-for="NotificationId" />
            <div class="form-group">
                <label for="Title">Bildirim</label>
                <input type="text" class="form-control" asp-for="NotificationName" placeholder="Gönderen Kişi" disabled style="background-color: #2a3038" />
            </div>
            <div class="form-group">
                <label for="Title">Detay</label>
                <input type="text" class="form-control" asp-for="NotificationDescription" placeholder="Mail" disabled style="background-color: #2a3038" />
            </div>
            <div class="form-group">
                <label for="Title">Tarih</label>
                <input type="date" class="form-control" asp-for="NotificationTime" placeholder="Konu" disabled style="background-color: #2a3038" />
            </div>
            <a href="/Admin/Notification/GoDetail/@Model.NotificationId" class="btn btn-primary mr-2">Detaya Git</a>
            <button class="btn btn-info">Geri</button>
        </form>
    </div>
</div>
