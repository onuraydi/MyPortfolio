@model List<GetBlogCategoryDto>

@{
    ViewData["Title"] = "GetAllPortfolioBlogCategories";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24 ">
    <div class="card-body">
        <h4 class="card-title">Kategoriler</h4>
        <p class="card-description">Bloglarda belirtmek üzere Kategoriler ile ilgili işlmeleri içerir</p>
        <div class="table-res">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Detaylar/Güncelle</th>
                        <th>Sil</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.CategoryName</td>
                            <td><a href="/Admin/BlogCategory/UpdatePortfolioBlogCategory/@item.BlogCategoryId" class="btn btn-primary">Detaylar/Güncelle</a></td>
                            <td><a href="/Admin/BlogCategory/DeletePortfolioBlogCategory/@item.BlogCategoryId" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/BlogCategory/CreatePortfolioBlogCategory/" class="btn btn-success">Kategori Ekle</a>
        </div>
    </div>
</div>




