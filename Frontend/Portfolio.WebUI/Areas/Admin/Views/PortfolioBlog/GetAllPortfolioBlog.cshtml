@model List<GetAllPortfolioBlogDto>
@{
    ViewData["Title"] = "GetAllPortfolioBlog";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}

<style>
    .aciklama {
        max-width: 300px; /* Genişliği sınırla */
        white-space: nowrap; /* Satır taşmasını önle */
        overflow: hidden; /* Taşan kısmı gizle */
        text-overflow: ellipsis; /* Taşan kısmı üç nokta ile göster */
    }
</style>

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24 ">
    <div class="card-body">
        <h4 class="card-title">Blog</h4>
        <p class="card-description">Bloglar ile ilgili işlemleri içerir  kapak resmi ve admin panelinde gözükecek bir açıklama kısmı ekle blog görünümüne git gibi bir kısım ekle buton ile direk bloğa yönlendir</p>
        <div class="table-res">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Kapak Resmi</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            <td class="aciklama">@item.Title</td>
                            <td class="aciklama">@item.SubContent</td>
                            <td>@item.CoverImage</td>
                            <td><a href="/Admin/PortfolioBlog/UpdatePortfolioBlog/@item.PortfolioBlogId" class="btn btn-primary">Güncelle</a></td>
                            <td><a href="/Admin/PortfolioBlog/DeletePortfolioBlog/@item.PortfolioBlogId" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/PortfolioBlog/CreatePortfolioBlog/" class="btn btn-success">Blog Ekle</a>
        </div>
    </div>
</div>
