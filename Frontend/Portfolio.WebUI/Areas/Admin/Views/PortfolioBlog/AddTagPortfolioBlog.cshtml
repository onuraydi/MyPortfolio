@model Portfolio.WebUI.Models.BlogTagsViewModel
@{
    ViewData["Title"] = "AddTagPortfolioBlog";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24 ">
    <div class="card-body">
        <h4 class="card-title">Blog Taglama</h4>
        <p class="card-description">Bloglarda belirtmek üzere Tagları burada ekleyebilirsiniz</p>
        <div class="table-res">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tagın Ad</th>
                        <th>Ekle</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model.BlogTags)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.TagName</td>
                            <td><a href="/Admin/PortfolioBlogTag/UpdatePortfolioBlogTag/@item.PortfolioBlogTagId" class="btn btn-primary">Detaylar/Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/PortfolioBlogTag/CreatePortfolioBlogTag/" class="btn btn-success">Tag Ekle</a>  <!-- buradaki metot buraya uygun değil-->
        </div>
    </div>
</div>
