@model GetPortfolioAboutMeByPortfolioAboutMeIdDto

@{
    ViewData["Title"] = "UpdatePortfolioAboutMe";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24">
    <div class="card-body">
        <h4 class="card-title">Hakkımda kısmı</h4>
        <p class="card-description">Detaylar/Güncelleme Sayfası</p>
        <form class="forms-sample" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="PortfolioAboutMeId" />
            <div class="form-group">
                <label for="Title">Başlık</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Başlık" />
            </div>
            <div class="form-group">
                <label for="Title">Açıklama</label>
                <textarea type="text" class="form-control" asp-for="Description" placeholder="Açıklama" rows="5"></textarea>
            </div>
            <div class="form-group">
                <label for="Image" class="text-white">Resim (.png)</label>

                <div class="input-group">
                    <!-- ID eklendi -->
                    <input type="file" asp-for="Image" id="Image" class="form-control file-upload-default" accept=".png" />
                    <input type="text" class="form-control file-upload-info" disabled placeholder="@Model.Image" />
                    <span class="input-group-append">
                        <!-- ID ile tıklama yapılıyor -->
                        <button class="btn btn-primary" type="button" onclick="document.getElementById('Image').click()">Yükle</button>
                    </span>
                </div>
            </div>


            <div class="form-group">
                <label for="Title">Ad-Soyad</label>
                <input type="text" class="form-control" asp-for="NameSurname" placeholder="Ad-Soyad" />
            </div>

            <div class="form-group">
                <label for="Title">Doğum Tarihi</label>
                <input type="date" class="form-control" asp-for="DateOfBirth" placeholder="Doğum Tarihi" />
            </div>


            <div class="form-group">
                <label for="Title">Adres</label>
                <input type="text" class="form-control" asp-for="Address" placeholder="Adres" />
            </div>


            <div class="form-group">
                <label for="Title">E-mail</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="E-Mail" />
            </div>


            <div class="form-group">
                <label for="Title">Telefon</label>
                <input type="tel" class="form-control" asp-for="Phone" placeholder="Phone" />
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label for="Title">Buton Adı</label>
                    <input type="text" class="form-control" asp-for="ButtonName" placeholder="Buton Adı" />
                </div>
                <div class="form-group col-md-6">
                    <label for="Title">Yol</label>
                    <input type="text" class="form-control" asp-for="ButtonHref" placeholder="Yol" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            <button type="button" class="btn btn-dark">Geri</button>
        </form>
    </div>
</div>