@model GetPortfolioFreelanceByPortfolioFreelanceIdDto

@{
    ViewData["Title"] = "UpdatePortfolioFreelance";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24">
    <div class="card-body">
        <h4 class="card-title">Eğitim</h4>
        <p class="card-description">Eğitim Güncelleme Sayfası</p>
        <form class="forms-sample" method="post">
            <input type="hidden" asp-for="PortfolioFreelanceId" />
            <div class="form-group">
                <label for="Title">Başlık</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Başlık" />
            </div>
            <div class="form-group">
                <label for="Title">Buton Linki</label>
                <input type="text" class="form-control" asp-for="ButtonHref" placeholder="Buton Linki" />
            </div>
            <div class="form-group">
                <label for="Title">Açıklama</label>
                <textarea class="form-control" asp-for="Description" rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            <button class="btn btn-info">Geri</button>
        </form>
    </div>
</div>


