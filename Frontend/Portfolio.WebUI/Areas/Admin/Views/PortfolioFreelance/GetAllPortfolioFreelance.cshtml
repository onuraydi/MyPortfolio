@model List<GetAllPortfolioFreelanceDto>

@{
    ViewData["Title"] = "GetAllPortfolioFreelance";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}

<style>
    .aciklama {
        max-width: 300px; /* Genişliği sınırla */
        white-space: nowrap; /* Satır taşmasını önle */
        overflow: hidden; /* Taşan kısmı gizle */
        text-overflow: ellipsis; /* Taşan kısmı üç nokta ile göster */
    }
</style>

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24 ">
    <div class="card-body">
        <h4 class="card-title">Freelance İş işlanları kısmı</h4>
        <p class="card-description">Freelance iş teklifleri almak için yönlendirme işlemi (ilerleyen aşamalarda site üzerinden) kısmı</p>
        <div class="table-res">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Buton Linki</th>
                        <th>Detaylar/Güncelle</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.Title</td>
                            <td class="aciklama">@item.Description</td>
                            <td>@item.ButtonHref</td>
                            <td><a href="/Admin/PortfolioFreelance/UpdatePortfolioFreelance/@item.PortfolioFreelanceId" class="btn btn-primary">Detaylar/Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
        </div>
    </div>
</div>


