@model CreatePortfolioRoutingFooterDto

@{
    ViewData["Title"] = "CreatePortfolioRoutingFooter";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24">
    <div class="card-body">
        <h4 class="card-title">Linkler</h4>
        <p class="card-description">Linkleri ve yönlendirmeleri bu sayfadan ekleyebilirsiniz</p>
        <form class="forms-sample" method="post">
            <div class="form-group">
                <label for="Title">Link Adı</label>
                <input type="text" class="form-control" asp-for="pageName" placeholder="Link Adı" />
            </div>
            <div class="form-group">
                <label for="Title">Link</label>
                <input type="text" class="form-control" asp-for="pageHref" placeholder="Link" />
            </div>
            <button type="submit" class="btn btn-primary mr-2">Ekle</button>
            <button class="btn btn-info">Geri</button>
        </form>
    </div>
</div>
