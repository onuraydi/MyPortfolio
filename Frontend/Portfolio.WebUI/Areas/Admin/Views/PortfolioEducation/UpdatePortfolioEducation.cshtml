@model GetPortfolioEducationByPortfolioEducationDto 

@{
    ViewData["Title"] = "UpdatePortfolioEducation";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24">
    <div class="card-body">
        <h4 class="card-title">Eğitim</h4>
        <p class="card-description">Eğitim Ekleme Sayfası</p>
        <form class="forms-sample" method="post">
            <input type="hidden" asp-for="PortfolioEducationId"/>
            <div class="form-group">
                <label for="Title">Okul Adı</label>
                <input type="text" class="form-control" asp-for="SchoolName" placeholder="Okul Adı" />
            </div>
            <div class="form-group">
                <label for="Title">Eğitim Detayı</label>
                <input type="text" class="form-control" asp-for="EducationDetail" placeholder="Eğitim Detayı" />
            </div>
            <div class="form-group">
                <label for="Title">Mezuniyet Tarihi</label>
                <input type="date" class="form-control" asp-for="EducationDate" placeholder="Mezuniyet Tarihi" />
            </div>
            <div class="form-group">
                <label for="Title">Mezuniyet Tarihi</label>
                <input type="number" class="form-control" asp-for="Average" placeholder="Ortalama" />
            </div>
            <div class="form-group">
                <label for="Title">Açıklama</label>
                <textarea class="form-control" asp-for="EducationDescription" rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            <button class="btn btn-info">Geri</button>
        </form>
    </div>
</div>

