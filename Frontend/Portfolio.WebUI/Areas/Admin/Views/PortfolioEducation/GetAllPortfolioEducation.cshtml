@model List<GetAllPortfolioEducationDto>

@{
    ViewData["Title"] = "GetAllPortfolioEducation";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24 ">
    <div class="card-body">
        <h4 class="card-title">Eğitimler</h4>
        <p class="card-description">Eğitimler ile ilgili işlemleri içerir  ortalamanın inputunu text yap </p>
        <div class="table-res">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Okul Adı</th>
                        <th>Detaylar</th>
                        <th>Mezun olunan Tarih</th>
                        <th>Ortalama</th>
                        <th>Açıklama</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.SchoolName</td>
                            <td>@item.EducationDetail</td>
                            <td>@item.EducationDate</td>
                            <td>@item.Average</td>
                            <td>@item.EducationDescription</td>
                            <td><a href="/Admin/PortfolioEducation/UpdatePortfolioEducation/@item.PortfolioEducationId" class="btn btn-primary">Güncelle</a></td>
                            <td><a href="/Admin/PortfolioEducation/DeletePortfolioEducation/@item.PortfolioEducationId" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/PortfolioEducation/CreatePortfolioEducation/" class="btn btn-success">Eğitim Ekle</a>
        </div>
    </div>
</div>