@model List<GetAllPortfolioTechnologyDto>
@{
    ViewData["Title"] = "GetAllPortfolioTechnology";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24 ">
    <div class="card-body">
        <h4 class="card-title">Çalışılan Teknolojiler</h4>
        <p class="card-description">Çalışılan Teknolojiler ile ilgili işlemleri içerir</p>
        <div class="table-res">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad</th>
                        <th>İkon</th>
                        <th>Detaylar/Güncelle</th>
                        <th>Sil</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.TechnologyName</td>
                            <td><img src="@item.IconUrl" alt="icon"/></td>
                            <td><a href="/Admin/PortfolioTechnology/UpdatePortfolioTechnology/@item.PortfolioTechnologyId" class="btn btn-primary">Detaylar/Güncelle</a></td>
                            <td><a href="/Admin/PortfolioTechnology/DeletePortfolioTechnology/@item.PortfolioTechnologyId" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/PortfolioTechnology/CreatePortfolioTechnology/" class="btn btn-success">Teknoloji Ekle</a>
        </div>
    </div>
</div>
