@model List<GetAllPortfolioExperienceDto>

@{
    ViewData["Title"] = "GetAllPortfolioExperince";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24 ">
    <div class="card-body">
        <h4 class="card-title">İş Tecrübeleri</h4>
        <p class="card-description">İş Tecrübeleri ile ilgili işlemleri içerir</p>
        <div class="table-res">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Şirket Adı</th>
                        <th>Tarih Aralığı</th>
                        <th>Açıklama</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                            {
                                count += 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.ExperienceTitle</td>
                            <td>@item.CompanyName</td>
                            <td>@item.ExperienceDate</td>
                            <td>@item.Description</td>
                            <td><a href="/Admin/PortfolioExperience/UpdatePortfolioExperience/@item.PortfolioExperienceId" class="btn btn-primary">Güncelle</a></td>
                            <td><a href="/Admin/PortfolioExperience/DeletePortfolioExperience/@item.PortfolioExperienceId" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/PortfolioExperience/CreatePortfolioExperience/" class="btn btn-success">Tecrübe Ekle</a>
        </div>
    </div>
</div>
