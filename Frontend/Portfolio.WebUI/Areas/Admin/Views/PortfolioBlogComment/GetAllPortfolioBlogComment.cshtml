@model List<GetAllPortfolioBlogCommentDto>

@{
    ViewData["Title"] = "GetAllPortfolioBlogComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card" style="background-color: #191c24 ">
    <div class="card-body">
        <h4 class="card-title">Blog Yorumları</h4>
        <p class="card-description">Blog Yorumları ile ilgili işlemleri içerir ileride direkt bloğun yorumuna gitme yorumu güncelleme gibi şeyler eklenebilir yorum detayına gitme eklenebilir</p>
        <div class="table-res">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Yorum Başlığı</th>
                        <th>Ad-Soyad</th>
                        <th>Yorum Detayına Git</th>
                        <th>Sil</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.CommentTitle</td>
                            <td>@item.Name @item.Surname</td>
                            <td><a href="/Admin/PortfolioBlogComment/GetByIdPortfolioBlogComment/@item.PortfolioBlogCommentId" class="btn btn-primary">Yorum Detayı</a></td>
                            <td><a href="/Admin/PortfolioBlogComment/DeletePortfolioBlogComment/@item.PortfolioBlogCommentId" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
        </div>
    </div>
</div>
