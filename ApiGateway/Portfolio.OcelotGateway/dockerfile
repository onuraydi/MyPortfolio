# Build aşaması
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build

WORKDIR /src

# Proje dosyasını kopyala ve restore yap
COPY Portfolio.OcelotGateway.csproj ./
RUN dotnet restore

# Tüm kaynak kodları kopyala ve publish et
COPY . . 
RUN dotnet publish -c Release -o /app/out

# Runtime aşaması
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime

WORKDIR /app
EXPOSE 7300

# Build aşamasından yayınlanan dosyaları al
COPY --from=build /app/out .

ENTRYPOINT ["dotnet", "Portfolio.OcelotGateway.dll"]
