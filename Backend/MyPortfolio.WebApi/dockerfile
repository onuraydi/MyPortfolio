# 1. Build aşaması
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Proje dosyasını kopyala
COPY ["Backend/MyPortfolio.WebApi/MyPortfolio.WebApi.csproj", "Backend/MyPortfolio.WebApi/"]

# Bağımlılıkları yükle
RUN dotnet restore "Backend/MyPortfolio.WebApi/MyPortfolio.WebApi.csproj"

# Tüm kaynak kodunu kopyala
COPY . .

# Proje dizinine geç
WORKDIR "/src/Backend/MyPortfolio.WebApi"

# Yayınla
RUN dotnet publish -c Release -o /app/publish

# 2. Runtime aşaması
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .

# Servis portunu aç
EXPOSE 5000

# Başlatıcı
ENTRYPOINT ["dotnet", "MyPortfolio.WebApi.dll"]
